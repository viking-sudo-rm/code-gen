{
    "dataset_reader": {
        "type": "char_lm",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "model": {
        "type": "language_model",
        "contextualizer": {
            "type": "lstm",
            "bidirectional": false,
            "dropout": 0.5,
            "hidden_size": 100,
            "input_size": 50,
            "num_layers": 2
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 50
                }
            }
        }
    },
    "train_data_path": "bitcoin.txt",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 10,
        "optimizer": "adam"
    }
}